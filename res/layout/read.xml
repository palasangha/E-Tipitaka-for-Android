<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:fillViewport="true"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background"
  android:orientation="vertical">
	<ListView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="#333333"
		android:dividerHeight="1dp"
		android:choiceMode="singleChoice" 
  		android:id="@+id/index_list"/>
	<RelativeLayout
	    android:id="@+id/shell_text"
		android:layout_height="match_parent"
		android:layout_width="match_parent">
		<ScrollView
		    android:id="@+id/scroll_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
		    >
			<view class="org.yuttadhammo.tipitaka.ReadBookActivity$PaliTextView" 
			    style="?android:attr/textViewStyle"
				android:id="@+id/main_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:textSize="16dp"
				android:lineSpacingExtra="2dip"
				android:visibility="gone"
			/>
		</ScrollView>
		<LinearLayout
		    android:id="@+id/dict_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
		  	android:orientation="horizontal"
			android:layout_alignParentTop="true"
		  	>
			<TextView
			    android:id="@+id/def_text"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:textSize="16dp"
				android:visibility="invisible"
			  	android:background="#FFFFFF"
				android:scrollHorizontally="true"
				/>
			<Button 
				android:id="@+id/dict_button"
				android:layout_height="wrap_content"
				android:layout_width="120dp"
				android:text="@string/dict"
				/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
