<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:fillViewport="true"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background"
  android:orientation="horizontal"
  android:id="@+id/split_pane"
  >
	<ListView
		android:layout_width="@dimen/left800"
		android:layout_height="match_parent"
		android:id="@+id/index_list"/>
	<View
	    android:layout_width="2dip"
	    android:layout_height="match_parent"
	/>
	<RelativeLayout
		android:layout_width="match_parent"
	    android:id="@+id/shell_text"
		android:layout_height="wrap_content">
		<ScrollView
		    android:id="@+id/scroll_text"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
		    >
	    	<view class="org.yuttadhammo.tipitaka.ReadBookActivity$PaliTextView" style="?android:attr/textViewStyle"
				android:id="@+id/main_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:textSize="16dp"
				android:lineSpacingExtra="2dip"
			/>
	    </ScrollView>
		<LinearLayout
		    android:id="@+id/dict_bar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"
		  	android:orientation="horizontal"
			android:layout_alignParentTop="true"
		  	>
			<TextView
			    android:id="@+id/def_text"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:padding="10dp"
				android:textSize="16dp"
				android:singleLine="true"
			  	android:background="#FFFFFF"
				android:visibility="invisible"
			/>
			<Button 
				android:id="@+id/dict_button"
				android:layout_height="wrap_content"
				android:layout_width="120dp"
				android:text="@string/dict"
			/>
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
